<div class="row">

  <div class="col-md-8">

    <% Category.read.order("name").each do |category| %>

      <div class="row chocolate">

        <div class="col-md-4">
          <%= link_to image_tag(category["photo_url"], "class" => "indeximage"), "/categories/#{category["id"]}" %>
        </div>

        <div class="col-md-8">
          <h2>
            <%= link_to category["name"], "/categories/#{category["id"]}" %>
          </h2>
        </div>

      </div>
    <% end %>
  </div>

</div>